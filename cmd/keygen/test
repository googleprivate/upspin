#!/bin/sh

function fail() {
  rm -f keygen public.upspinkey secret.upspinkey
  echo FAILED
  exit 1
}


go build || fail
./keygen -where=. -secretseed pibud-sijat-ponam-zizaz.kudol-visin-vakok-jinok || fail

(cmp -s public.upspinkey public.test && cmp -s secret.upspinkey secret.test ) || fail
rm -f keygen public.upspinkey secret.upspinkey

echo PASSED
exit 0
